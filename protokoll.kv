# Hauptlayout für die App
<RootWidget>:
    id: root_widget
    datum: datum
    beginn: beginn
    ende: ende
    grund: grund
        
    MDFloatLayout:
        # Hintergrundbild
        Image:
            source: 'utils/image/R (8).jpg'  # Bildquelle
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1  # Bild füllt den gesamten Bereich
            pos: self.pos
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos

        # Top App Bar
        MDTopAppBar:
            id: top_app_bar
            title: "Lärmprotokoll App"
            md_bg_color: app.theme_cls.primary_color
            size_hint_y: None
            size_hint_x: 1
            pos_hint: {"top": 1}
            height: "50dp"
            elevation: 4
            right_action_items: [["utils/image/pdf-icon-png-2056.png", lambda x: app.generiere_protokoll()]]
        
        FloatLayout:
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
        
            # Verschiebbare Karte 1: Einträge bearbeiten
            MyDraggableCard:
                size_hint: None, None
                size: "400dp", "250dp"
                elevation: 2

                MDBoxLayout:
                    orientation: "vertical"
                    padding: dp(20)
                    spacing: dp(10)

                    MDLabel:
                        text: "Einträge bearbeiten"
                        halign: "center"
                        font_style: "H6"
                        size_hint_y: None
                        height: dp(30)

                    MDTextField:
                        id: eingabe
                        hint_text: "ID"
                        mode: "rectangle"
                        size_hint_y: None
                        height: "40dp"

                    MDBoxLayout:
                        spacing: dp(10)
                        size_hint_y: None
                        height: dp(50)

                        MDRaisedButton:
                            text: "Aktualisieren"
                            on_press: app.aktualisiere_eintrag(eingabe.text)

                        MDRaisedButton:
                            text: "Löschen"
                            on_press: app.loesche_daten(eingabe.text)
        MDFloatLayout:

            # Verschiebbare Karte 2: Protokoll erstellen
            MyDraggableCard:
                size_hint: None, None
                size: "500dp", "600dp"
                elevation: 2

                MDBoxLayout:
                    orientation: "vertical"
                    padding: dp(20)
                    spacing: dp(10)

                    MDLabel:
                        text: "Protokoll erstellen"
                        halign: "center"
                        font_style: "H6"
                        size_hint_y: None
                        height: dp(30)

                    MDGridLayout:
                        cols: 2
                        spacing: dp(10)

                        MDLabel:
                            text: "Datum (YYYY-MM-DD):"
                        MDTextField:
                            id: datum
                            hint_text: "z.B. 2023-12-31"
                            mode: "rectangle"

                        MDLabel:
                            text: "Beginn (HH:MM):"
                        MDTextField:
                            id: beginn
                            hint_text: "z.B. 08:00"
                            mode: "rectangle"

                        MDLabel:
                            text: "Ende (HH:MM):"
                        MDTextField:
                            id: ende
                            hint_text: "z.B. 08:01"
                            mode: "rectangle"

                        MDLabel:
                            text: "Art der Störung:"
                        MDTextField:
                            id: grund
                            hint_text: "z.B. Trampeln"
                            mode: "rectangle"

                        MDLabel:
                            text: "Verursacher:"
                        MDTextField:
                            id: verursacher
                            hint_text: "z.B. Nachbar"
                            mode: "rectangle"

                        MDLabel:
                            text: "Auswirkung:"
                        MDTextField:
                            id: auswirkung
                            hint_text: "z.B. 3"
                            input_type: "number"
                            mode: "rectangle"

                    MDRaisedButton:
                        text: "Daten erfassen"
                        pos_hint: {"center_x": 0.5}
                        on_press: app.erfasse_daten(datum.text, beginn.text, ende.text, grund.text, verursacher.text, auswirkung.text)
